# Environment Variables for Power Pro System
# Copy this file to .env.local and fill in your actual values

# Stripe Payment Gateway
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Google Analytics 4
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog Analytics
VITE_POSTHOG_KEY=phc_your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# Email Service (SendGrid/Resend)
VITE_EMAIL_API_KEY=your_email_api_key_here
VITE_EMAIL_FROM=noreply@gasepower.com

# OCR Service for Bill Parsing (Optional)
VITE_OCR_API_KEY=your_ocr_api_key_here
VITE_OCR_ENDPOINT=https://api.ocr-service.com/v1/parse

# App Configuration
VITE_APP_URL=https://gasepower.com
VITE_APP_NAME=Gas Power Compara
VITE_APP_VERSION=2.0.0

# Feature Flags
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_OCR=false
VITE_ENABLE_AI_INSIGHTS=true

# API Endpoints
VITE_API_BASE_URL=https://api.gasepower.com
VITE_API_TIMEOUT=30000

# Support Configuration
VITE_SUPPORT_EMAIL=support@gasepower.com
VITE_SUPPORT_PHONE=+39 02 1234567

# Pricing (in cents to avoid float issues)
VITE_PRICE_MONTHLY=199  # €1.99
VITE_PRICE_YEARLY=1999   # €19.99
VITE_PRICE_BUSINESS=4999 # €49.99

# Development/Staging/Production
VITE_ENV=development
VITE_DEBUG=true
